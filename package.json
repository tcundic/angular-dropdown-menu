{
  "name": "angular-dropdown-menu",
  "version": "1.0.0",
  "description": "Angular dropdown menu",
  "main": "./dist/index.umd.js",
  "module": "./dist/index.js",
  "typings": "./dist/index.d.ts",
  "license": "GPLv3",
  "keywords": [
    "angular",
    "aot",
    "aot-compatible",
    "aot-compilation",
    "library",
    "ng",
    "typescript",
    "dropdown",
    "menu"
  ],
  "author": {
    "name": "Tomislav Cundic",
    "url": "https://www.tcundic.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tcundic/angular-dropdown-menu.git"
  },
  "homepage": "https://github.com/tcundic/angular-dropdown-menu#readme",
  "scripts": {
    "build": "npm run build:nsm && npm run build:umd",
    "build:esm": "gulp inline-templates && npm run ngcompile",
    "build:esm:watch": "gulp build:esm:watch",
    "build:umd": "webpack --config webpack-umd.config.ts",
    "build:umd:watch": "npm run build:umd -- --watch",
    "build:watch": "concurrently --raw \"npm run build:umd:watch\" \"npm run build:esm:watch\"",
    "ci": "npm run lint && npm run build",
    "clean:all": "npm run clean:tmp && rimraf node_modules",
    "clean:tmp": "rimraf dist tmp",
    "explorer": "source-map-explorer ./dist/index.umd.js",
    "lint": "npm run tslint 'src/**/*.ts'",
    "ngcompile": "node_modules/.bin/ngc -p tsconfig-aot.json",
    "prebuild": "rimraf dist tmp",
    "prebuild:watch": "rimraf dist tmp",
    "prepublishOnly": "npm run ci",
    "preversion": "npm run ci",
    "tslint": "tslint"
  },
  "dependencies": {
    "@angular/animations": "~7.1.0",
    "@angular/common": "~7.1.0",
    "@angular/core": "~7.1.0",
    "@angular/forms": "~7.1.0",
    "@angular/platform-browser": "~7.1.0",
    "@angular/platform-browser-dynamic": "~7.1.0",
    "@angular/router": "~7.1.0",
    "@types/karma": "^3.0.1",
    "awesome-typescript-loader": "^5.2.1",
    "core-js": "^2.5.4",
    "rxjs": "^6.3.3",
    "to-string-loader": "^1.1.5",
    "tslib": "^1.9.0",
    "zone.js": "~0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.11.0",
    "@angular/cli": "~7.1.4",
    "@angular/compiler": "^7.1.4",
    "@angular/compiler-cli": "^7.1.4",
    "@angular/language-service": "~7.1.0",
    "@types/jasmine": "~2.8.8",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "~8.9.4",
    "@types/webpack": "^3.8.17",
    "@types/webpack-env": "^1.13.6",
    "angular2-template-loader": "^0.6.2",
    "codelyzer": "~4.5.0",
    "concurrently": "^3.4.0",
    "css-loader": "^0.28.11",
    "gulp": "^3.9.1",
    "gulp-inline-ng2-template": "^4.1.0",
    "html-webpack-plugin": "^3.2.0",
    "jasmine-core": "~2.99.1",
    "jasmine-spec-reporter": "~4.2.1",
    "json-loader": "^0.5.4",
    "karma": "~3.1.1",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.1",
    "karma-jasmine": "~1.1.2",
    "karma-jasmine-html-reporter": "^0.2.2",
    "node-sass": "^4.5.2",
    "protractor": "~5.4.0",
    "raw-loader": "^0.5.1",
    "rimraf": "^2.6.1",
    "sass-loader": "^6.0.7",
    "source-map-explorer": "^1.3.3",
    "ts-node": "~7.0.0",
    "tslint": "~5.11.0",
    "typescript": "3.1.6",
    "webpack": "^4.28.2",
    "webpack-angular-externals": "^1.0.2",
    "webpack-cli": "^3.1.2",
    "webpack-rxjs-externals": "^1.1.0",
    "zone.js": "^0.8.10"
  }
}
